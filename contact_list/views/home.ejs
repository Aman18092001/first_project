<html>
    <head>
        <title> 
            <%=title %>
        </title>
        <style>

        </style>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fa fa-address-book"></i>
            CONTACT LISTS!
        </h1>
    <div id="contact-list-container">  
    <ul>
        <%for(var i of contact_list){%>
            <li class="contact">
                <div class="details">
                <p><%=i.name%></p>
                <p><%=i.phone%></p>
                </div>
                <div class="delete-button">
                    <a href="/delete-contact/?id=<%=i._id%>">
                        <i class="fa fa-window-close" ></i>
                    </a>
                </div>
            </li>

        <%}%> 
    </ul> 
    </div>
      <form id="new-contact-form" action="/contact-list" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required>
        <input type="number" name="phone" placeholder="Enter Number" required>
        <button type="submit">Add</button> 
      </form>
      <script src="https://kit.fontawesome.com/b533c48c82.js" crossorigin="anonymous"></script> 
      <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>